{
	"compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "ESNext", "DOM.Iterable"],
    "strict": true,
    "module": "ESNext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node"],
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
	"include": ["src", "types"]
  }
  